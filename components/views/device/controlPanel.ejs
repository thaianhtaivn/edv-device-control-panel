<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <title>Device Control Panel</title>
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <link rel="stylesheet" href="/style.css" />
      <style>
         :root {
            --card-bg: #fff;
            --card-bd: #e5e7eb;
            --text-strong: #374151;
            --page-bg: #f9fafb;
            --brand: #534bf8;
         }

         body {
            font-family: system-ui, sans-serif;
            background: var(--page-bg);
            padding: 0 2rem 2rem;
         }

         .container {
            margin: auto;
            max-width: 960px;
         }

         .title h1 {
            text-align: center;
            margin: 1.25rem 0 0.25rem;
         }

         .button-container {
            margin-top: 20px;
            display: grid;
            grid-template-columns: repeat(3, minmax(0, 1fr));
            align-items: stretch;
            justify-items: center;
         }

         .toggle {
            width: 80%;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.6rem;
            padding: 1rem;
            background: var(--card-bg);
            border-radius: 12px;
            border: 1px solid var(--card-bd);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
            cursor: pointer;
            min-height: 80px; /* nice touch target */
         }

         .label {
            font-size: 1.05rem;
            font-weight: 600;
            color: var(--text-strong);
         }

         .toggle input {
            display: none; /* hide checkbox */
         }

         .switch {
            width: 85px;
            height: 40px;
            background: #d1d5db;
            border-radius: 999px;
            position: relative;
            transition: background 0.25s ease;
         }

         .dot {
            position: absolute;
            top: 5px;
            left: 5px;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: #fff;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
            transition: left 0.25s ease;
         }

         /* ON state */
         .toggle input:checked + .switch {
            background: var(--brand);
         }
         .toggle input:checked + .switch .dot {
            left: 50px;
         }

         .meta-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
            margin: 1rem;
         }

         /* -------- MOBILE (≤768px) -------- */
         @media (max-width: 768px) {
            body {
               padding: 0 1rem 1.25rem;
            }

            .button-container {
               grid-template-columns: 1fr; /* stack toggles */
               gap: 0.9rem;
            }

            .toggle {
               align-items: stretch;
               text-align: center;
            }

            /* Slightly smaller switch to fit narrow screens */
            .switch {
               width: 72px;
               height: 34px;
               margin: 0 auto;
            }
            .dot {
               width: 26px;
               height: 26px;
               top: 4px;
               left: 4px;
            }
            .toggle input:checked + .switch .dot {
               left: 42px;
            }

            .label {
               font-size: 1rem;
            }
         }
      </style>
   </head>

   <body>
      <div class="container">
         <div class="title" data-device-id="<%= id %>" id="device-container">
            <h1>Control Panel <b><%= id %></b></h1>
         </div>

         <% const binary = device.state.toString(2).padStart(3, "0"); %>

         <div class="button-container">
            <label class="toggle">
               <span class="label">Light</span>
               <input type="checkbox" <%= binary[0] === "1" ? "checked" : "" %> />
               <div class="switch"><div class="dot"></div></div>
            </label>

            <label class="toggle">
               <span class="label">Fan</span>
               <input type="checkbox" <%= binary[1] === "1" ? "checked" : "" %> />
               <div class="switch"><div class="dot"></div></div>
            </label>

            <label class="toggle">
               <span class="label">Heater</span>
               <input type="checkbox" <%= binary[2] === "1" ? "checked" : "" %> />
               <div class="switch"><div class="dot"></div></div>
            </label>
         </div>

         <div class="meta-row">
            <a href="/">← Home</a>
            <a href="/device/details/<%= id %>">Details →</a>
         </div>
      </div>

      <script src="/js/buttonToggles.js"></script>
   </body>
</html>
